@{
    ViewData["Title"] = "Home";
}

<section id="hero" class="hero section light-background">

    <img src="~/assets/img/hero-bg.jpg" alt="" data-aos="fade-in" />

    <div class="container position-relative">

        <div class="welcome position-relative" data-aos="fade-down" data-aos-delay="100">
            <h2>DOCTOR APPOINTMENT SYSTEM</h2>
            <p>Book appointments with qualified healthcare professionals anytime, anywhere</p>
        </div>

        <div class="content row gy-4">
            <div class="col-lg-4 d-flex align-items-stretch">
                <div class="why-box" data-aos="zoom-out" data-aos-delay="200">
                    <h3>Why Choose Our System?</h3>
                    <p>
                        Our appointment system connects patients with qualified doctors seamlessly. Find specialists by medical field,
                        check real-time availability, and book appointments instantly. Manage your medical appointments efficiently with
                        automatic reminders and secure medical records.
                    </p>
                    <div class="text-center">
                        <a href="/Home/Services" class="more-btn">
                            <span>View System Features</span> <i class="bi bi-chevron-right"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-lg-8 d-flex align-items-stretch">
                <div class="d-flex flex-column justify-content-center">
                    <div class="row gy-4">

                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box" data-aos="zoom-out" data-aos-delay="300">
                                <i class="bi bi-calendar-check"></i>
                                <h4>Easy Booking</h4>
                                <p>Schedule appointments with just a few clicks. Browse available doctors and time slots instantly.</p>
                            </div>
                        </div>

                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box" data-aos="zoom-out" data-aos-delay="400">
                                <i class="bi bi-search"></i>
                                <h4>Find Specialists</h4>
                                <p>Search doctors by specialty, experience, and availability. Compare profiles and choose the best fit.</p>
                            </div>
                        </div>

                        <div class="col-xl-4 d-flex align-items-stretch">
                            <div class="icon-box" data-aos="zoom-out" data-aos-delay="500">
                                <i class="bi bi-bell"></i>
                                <h4>Smart Reminders</h4>
                                <p>Automatic appointment reminders and notifications. Never miss your scheduled appointments.</p>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>

    </div>

</section>
