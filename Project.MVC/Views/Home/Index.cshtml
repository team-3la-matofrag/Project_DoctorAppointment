@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

<style>
    /* تحسينات بصرية مخصصة */
    .hero-creative {
        position: relative;
        padding: 120px 0 80px;
        background: linear-gradient(135deg, #f0f8ff 0%, #ffffff 100%);
        overflow: hidden;
    }

        /* الخلفية المتحركة */
        .hero-creative::before {
            content: "";
            position: absolute;
            top: -10%;
            right: -5%;
            width: 400px;
            height: 400px;
            background: rgba(13, 110, 253, 0.05);
            border-radius: 50%;
            z-index: 0;
        }

    /* الكروت الزجاجية */
    .glass-card {
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        border-radius: 20px;
        transition: all 0.4s ease;
    }

        .glass-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 35px rgba(13, 110, 253, 0.1);
            background: #ffffff;
        }

    /* أيقونات نابضة */
    .icon-wrapper {
        width: 60px;
        height: 60px;
        background: #0d6efd;
        color: white;
        border-radius: 15px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin-bottom: 20px;
        font-size: 24px;
        box-shadow: 0 8px 15px rgba(13, 110, 253, 0.2);
    }

    /* زر الحركة الرئيسي */
    .btn-main {
        padding: 12px 35px;
        border-radius: 50px;
        font-weight: 600;
        transition: 0.3s;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    /* صورة البطل بتصميم منحني */
    .hero-img-container {
        position: relative;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 20px 20px 60px #d9d9d9, -20px -20px 60px #ffffff;
    }

    /* الأشكال العائمة */
    .floating-badge {
        position: absolute;
        background: white;
        padding: 15px 25px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(0,0,0,0.1);
        z-index: 10;
        animation: floating 3s ease-in-out infinite;
    }

    @@keyframes floating {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-15px);
        }

        100% {
            transform: translateY(0px);
        }
    }
</style>

<section id="hero" class="hero-creative">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-right">
                <span class="badge bg-primary-soft text-primary px-3 py-2 mb-3 rounded-pill animate__animated animate__fadeInDown">
                    <i class="bi bi-shield-check me-2"></i>Trusted Medical Network
                </span>
                <h1 class="display-4 fw-bold mb-4">Your Health, <br><span class="text-primary">Our Priority.</span></h1>
                <p class="lead text-muted mb-4">
                    Experience a seamless way to connect with top healthcare professionals.
                    Real-time booking, expert care, and smart reminders all in one place.
                </p>
                <div class="d-flex gap-3">
                    <a href="/Home/Doctors" class="btn btn-primary btn-main shadow-lg">Book Now</a>
                    <a href="/Home/About" class="btn btn-outline-secondary btn-main">Learn More</a>
                </div>

                <div class="row mt-5 pt-4 border-top">
                    <div class="col-4 text-center">
                        <h4 class="fw-bold mb-0">50+</h4>
                        <small class="text-muted">Specialists</small>
                    </div>
                    <div class="col-4 text-center">
                        <h4 class="fw-bold mb-0">10k+</h4>
                        <small class="text-muted">Patients</small>
                    </div>
                    <div class="col-4 text-center">
                        <h4 class="fw-bold mb-0">24/7</h4>
                        <small class="text-muted">Support</small>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 ps-lg-5" data-aos="zoom-in">
                <div class="position-relative">
                    <div class="floating-badge d-flex align-items-center gap-3" style="top: 20%; left: -10%;">
                        <div class="bg-success text-white rounded-circle p-2"><i class="bi bi-check-lg"></i></div>
                        <div>
                            <p class="mb-0 fw-bold">Success Booking</p>
                            <small class="text-muted">Just Now</small>
                        </div>
                    </div>

                    <div class="hero-img-container">
                        <img src="~/assets/img/hero-bg.jpg" class="img-fluid" alt="Medical Team">
                    </div>

                    <div class="floating-badge d-flex align-items-center gap-3" style="bottom: 10%; right: -5%; animation-delay: 1s;">
                        <div class="bg-primary text-white rounded-circle p-2"><i class="bi bi-star-fill"></i></div>
                        <div>
                            <p class="mb-0 fw-bold">Top Rated</p>
                            <small class="text-muted">4.9/5 Review</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-5 pt-5 gy-4">
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="100">
                <div class="glass-card p-4 h-100">
                    <div class="icon-wrapper"><i class="bi bi-calendar-check"></i></div>
                    <h5 class="fw-bold">Instant Booking</h5>
                    <p class="text-muted small">Choose your preferred time and get immediate confirmation without any hassle.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="200">
                <div class="glass-card p-4 h-100">
                    <div class="icon-wrapper bg-info"><i class="bi bi-search"></i></div>
                    <h5 class="fw-bold">Find Specialists</h5>
                    <p class="text-muted small">Access a wide range of departments and highly qualified medical doctors in one place.</p>
                </div>
            </div>
            <div class="col-md-4" data-aos="fade-up" data-aos-delay="300">
                <div class="glass-card p-4 h-100">
                    <div class="icon-wrapper bg-warning"><i class="bi bi-bell"></i></div>
                    <h5 class="fw-bold">Smart Reminders</h5>
                    <p class="text-muted small">Stay updated with automatic notifications and SMS alerts for your upcoming visits.</p>
                </div>
            </div>
        </div>
    </div>
</section>