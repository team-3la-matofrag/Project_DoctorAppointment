@{
    ViewData["Title"] = "About Us";
}

<style>
    .about-creative {
        padding: 80px 0;
        background: #fff;
    }

    .image-stack {
        position: relative;
        margin-bottom: 3rem;
    }

        .image-stack img {
            border-radius: 20px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.1);
        }

    .image-stack-top {
        position: absolute;
        bottom: -20px;
        right: -20px;
        width: 60%;
        border: 8px solid #fff;
        border-radius: 20px;
        z-index: 2;
    }

    .feature-list {
        list-style: none;
        padding: 0;
    }

    .feature-item {
        display: flex;
        align-items: flex-start;
        margin-bottom: 25px;
        padding: 20px;
        border-radius: 15px;
        background: #f8fbff;
        transition: 0.3s;
    }

        .feature-item:hover {
            background: #fff;
            box-shadow: 0 10px 30px rgba(13, 110, 253, 0.1);
            transform: translateX(10px);
        }

    .feature-icon {
        width: 50px;
        height: 50px;
        background: #0d6efd;
        color: #fff;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        margin-right: 20px;
        flex-shrink: 0;
    }

    .about-badge {
        display: inline-block;
        padding: 8px 20px;
        background: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
        border-radius: 50px;
        font-weight: 600;
        margin-bottom: 20px;
    }
</style>

<section class="about-creative">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-lg-6 mb-5 mb-lg-0" data-aos="fade-right">
                <div class="image-stack">
                    <img src="~/assets/img/about.jpg" class="img-fluid w-100" alt="About Clinic">
                    <div class="image-stack-top animate__animated animate__pulse animate__infinite">
                        <div class="bg-primary p-4 rounded-4 text-white text-center shadow-lg">
                            <h2 class="fw-bold mb-0">15+</h2>
                            <p class="small mb-0">Years of Excellence</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 ps-lg-5" data-aos="fade-left">
                <span class="about-badge">About Our Platform</span>
                <h2 class="display-5 fw-bold mb-4">Revolutionizing the way you connect with <span class="text-primary">Healthcare.</span></h2>
                <p class="text-muted mb-5 lead">
                    We bridge the gap between patients and medical experts through a smart, seamless, and secure appointment ecosystem.
                </p>

                <div class="feature-list">
                    <div class="feature-item">
                        <div class="feature-icon"><i class="bi bi-person-heart"></i></div>
                        <div>
                            <h5 class="fw-bold">Patient-Centric Care</h5>
                            <p class="text-muted mb-0 small">Personalized health profiles, easy booking history, and instant digital records at your fingertips.</p>
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon bg-info"><i class="bi bi-calendar2-check"></i></div>
                        <div>
                            <h5 class="fw-bold">Seamless Scheduling</h5>
                            <p class="text-muted mb-0 small">For doctors, a powerful dashboard to manage shifts, consultations, and patient flow efficiently.</p>
                        </div>
                    </div>

                    <div class="feature-item">
                        <div class="feature-icon bg-success"><i class="bi bi-shield-lock"></i></div>
                        <div>
                            <h5 class="fw-bold">Unified Administration</h5>
                            <p class="text-muted mb-0 small">Real-time monitoring and reporting tools for clinic administrators to ensure quality service.</p>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>