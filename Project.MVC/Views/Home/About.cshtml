@{
    ViewData["Title"] = "About";
}

<section id="about" class="about section">

    <div class="container">

        <div class="row gy-4 gx-5">

            <div class="col-lg-6 position-relative align-self-start" data-aos="fade-up" data-aos-delay="200">
                <img src="~/assets/img/about.jpg" class="img-fluid" alt="">
                <a href="https://www.youtube.com/watch?v=Y7f98aduVJ8" class="glightbox pulsating-play-btn"></a>
            </div>

            <div class="col-lg-6 content" data-aos="fade-up" data-aos-delay="100">
                <h3>About Our Appointment System</h3>
                <p>
                    Our Doctor Appointment System is designed to simplify healthcare scheduling. We connect patients with qualified
                    healthcare professionals, enabling efficient appointment management and better patient care coordination.
                </p>
                <ul>
                    <li>
                        <i class="fa-solid fa-check-circle"></i>
                        <div>
                            <h5>For Patients</h5>
                            <p>Book appointments with specialists, manage your medical records, view appointment history, and receive timely reminders.</p>
                        </div>
                    </li>
                    <li>
                        <i class="fa-solid fa-clock"></i>
                        <div>
                            <h5>For Doctors</h5>
                            <p>Manage your schedule, accept patient requests, view patient information, and optimize your appointment availability.</p>
                        </div>
                    </li>
                    <li>
                        <i class="fa-solid fa-gears"></i>
                        <div>
                            <h5>For Administrators</h5>
                            <p>Monitor system activity, manage users and doctors, handle appointment verification, and generate comprehensive reports.</p>
                        </div>
                    </li>
                </ul>
            </div>

        </div>

    </div>

</section>
