@{
    ViewData["Title"] = "Contact Us";
}

<style>
    .contact-creative {
        padding: 80px 0;
        background: #fcfdfe;
    }

    /* كروت المعلومات */
    .info-card-custom {
        background: #fff;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 10px 30px rgba(0,0,0,0.05);
        margin-bottom: 25px;
        transition: 0.3s;
        border: 1px solid #f1f1f1;
    }

        .info-card-custom:hover {
            transform: translateY(-5px);
            border-color: #0d6efd;
        }

    .info-icon {
        width: 50px;
        height: 50px;
        background: rgba(13, 110, 253, 0.1);
        color: #0d6efd;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 22px;
        margin-bottom: 15px;
    }

    /* تصميم الفورم */
    .contact-form-wrapper {
        background: #fff;
        padding: 40px;
        border-radius: 25px;
        box-shadow: 0 20px 50px rgba(0,0,0,0.08);
    }

    .form-control-custom {
        border: 1px solid #eee;
        padding: 15px 20px;
        border-radius: 12px;
        background: #f9f9f9;
        transition: 0.3s;
    }

        .form-control-custom:focus {
            background: #fff;
            border-color: #0d6efd;
            box-shadow: 0 5px 15px rgba(13, 110, 253, 0.05);
            outline: none;
        }

    .map-container {
        border-radius: 25px;
        overflow: hidden;
        box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        margin-top: 50px;
    }
</style>

<section class="contact-creative">
    <div class="container" data-aos="fade-up">

        <div class="text-center mb-5">
            <span class="badge bg-primary-soft text-primary px-3 py-2 rounded-pill mb-2">Get In Touch</span>
            <h2 class="fw-bold display-5">Let's Start a <span class="text-primary">Conversation</span></h2>
            <p class="text-muted">Reach out to us for any inquiries or support regarding your appointments.</p>
        </div>

        <div class="row g-4">
            <div class="col-lg-4">
                <div class="info-card-custom" data-aos="fade-right" data-aos-delay="100">
                    <div class="info-icon"><i class="bi bi-geo-alt"></i></div>
                    <h5 class="fw-bold">Our Location</h5>
                    <p class="text-muted mb-0">A108 Adam Street, New York, NY 535022</p>
                </div>

                <div class="info-card-custom" data-aos="fade-right" data-aos-delay="200">
                    <div class="info-icon"><i class="bi bi-telephone"></i></div>
                    <h5 class="fw-bold">Call Us</h5>
                    <p class="text-muted mb-0">+1 5589 55488 55</p>
                </div>

                <div class="info-card-custom" data-aos="fade-right" data-aos-delay="300">
                    <div class="info-icon"><i class="bi bi-envelope"></i></div>
                    <h5 class="fw-bold">Email Us</h5>
                    <p class="text-muted mb-0">support@docsystem.com</p>
                </div>
            </div>

            <div class="col-lg-8">
                <div class="contact-form-wrapper" data-aos="fade-left">
                    <form action="#" method="post" class="php-email-form">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <input type="text" name="name" class="form-control form-control-custom" placeholder="Full Name" required>
                            </div>
                            <div class="col-md-6">
                                <input type="email" name="email" class="form-control form-control-custom" placeholder="Your Email" required>
                            </div>
                            <div class="col-12">
                                <input type="text" name="subject" class="form-control form-control-custom" placeholder="Subject" required>
                            </div>
                            <div class="col-12">
                                <textarea name="message" class="form-control form-control-custom" rows="5" placeholder="How can we help you?" required></textarea>
                            </div>
                            <div class="col-12 text-center mt-4">
                                <button type="submit" class="btn btn-primary btn-lg px-5 rounded-pill shadow">
                                    Send Message <i class="bi bi-send ms-2"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="map-container" data-aos="zoom-in">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3023.952212236894!2d-74.0059418!3d40.7127753!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c25a22a3bda6f5%3A0xab3f69503361711!2sManhattan%2C%20New%20York%2C%20NY!5e0!3m2!1sen!2sus!4v1647384500000!5m2!1sen!2sus"
                    width="100%" height="400" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
        </div>

    </div>
</section>