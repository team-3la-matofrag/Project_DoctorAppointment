@{
    ViewData["Title"] = "System Features";
}

<section id="services" class="services section">

    <div class="container section-title" data-aos="fade-up">
        <h2>System Features</h2>
        <p>Complete appointment management solution for patients, doctors, and administrators</p>
    </div>

    <div class="container">

        <div class="row gy-4">

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="fas fa-search"></i>
                    </div>
                    <h3>Doctor Search</h3>
                    <p>Search and filter doctors by specialty, experience, fees, and availability. Find the perfect healthcare provider for your needs.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <h3>Schedule Management</h3>
                    <p>Doctors can set their availability and manage appointments. Patients can view real-time slots and book instantly.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="300">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="fas fa-file-medical"></i>
                    </div>
                    <h3>Medical Records</h3>
                    <p>Secure storage and management of patient medical history, prescriptions, and health information.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="400">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="fas fa-bell"></i>
                    </div>
                    <h3>Smart Notifications</h3>
                    <p>Automatic appointment reminders via email and SMS. Never miss your scheduled appointments.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="500">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="fas fa-lock"></i>
                    </div>
                    <h3>Secure Authentication</h3>
                    <p>Role-based access control with secure login for patients, doctors, and administrators. Your data is protected.</p>
                </div>
            </div>

            <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="600">
                <div class="service-item position-relative">
                    <div class="icon">
                        <i class="fas fa-chart-bar"></i>
                    </div>
                    <h3>Admin Dashboard</h3>
                    <p>Comprehensive system monitoring, user management, appointment oversight, and detailed reporting for administrators.</p>
                </div>
            </div>

        </div>

    </div>

</section>
