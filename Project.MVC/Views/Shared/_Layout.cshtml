<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Healthcare System</title>

    <link rel="icon" type="image/png" href="~/assets/img/favicon2.png" />

    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet">
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">

    <link href="~/assets/css/main.css" rel="stylesheet">

    <style>
        body {
            font-family: 'Plus Jakarta Sans', sans-serif;
            background-color: #fdfeff;
        }

        /* تحسين الهيدر */
        .custom-header {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(15px);
            border-bottom: 1px solid rgba(0,0,0,0.05);
            transition: 0.3s;
        }

        .nav-link-custom {
            font-weight: 600;
            color: #444 !important;
            padding: 10px 15px !important;
            border-radius: 8px;
            transition: 0.3s;
        }

            .nav-link-custom:hover, .nav-link-custom.active {
                color: #0d6efd !important;
                background: rgba(13, 110, 253, 0.05);
            }

        .main-content {
            padding-top: 20px;
            min-height: 80vh;
        }

        /* فوتر عصري */
        .modern-footer {
            background: #fff;
            border-top: 1px solid #eee;
            padding: 40px 0 20px;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <header class="header sticky-top custom-header py-2">
        <div class="container d-flex align-items-center justify-content-between">

            <a href="/" class="d-flex align-items-center text-decoration-none">
                <div class="bg-primary text-white rounded-3 p-2 me-2 shadow-sm">
                    <i class="bi bi-heart-pulse-fill fs-4"></i>
                </div>
                <h1 class="h4 m-0 text-dark fw-bold">Medic<span class="text-primary">Hub</span></h1>
            </a>

            <nav class="d-none d-xl-block">
                <ul class="nav">
                    <li><a class="nav-link-custom" href="/">Home</a></li>
                    <li><a class="nav-link-custom" href="/Home/Doctors">Doctors</a></li>
                    <li><a class="nav-link-custom" href="/Home/Departments">Specialties</a></li>
                    <li><a class="nav-link-custom" href="/Home/Services">Features</a></li>
                    <li><a class="nav-link-custom" href="/Home/About">About</a></li>
                    <li><a class="nav-link-custom" href="/Home/Contact">Contact</a></li>
                </ul>
            </nav>

            <div class="d-flex align-items-center gap-3">
                <partial name="_UserNav" />
                <button class="btn btn-light d-xl-none border-0 shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#mobileMenu">
                    <i class="bi bi-list fs-3"></i>
                </button>
            </div>
        </div>
    </header>

    <main class="main-content">
        <div class="container">
            <partial name="_Alerts" />
        </div>
        @RenderBody()
    </main>

    <footer class="modern-footer mt-auto">
        <div class="container text-center">
            <div class="mb-3">
               
    </footer>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <script>
        AOS.init({ duration: 800, once: true });
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>