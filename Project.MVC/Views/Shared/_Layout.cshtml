<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Doctor Appointment System</title>

    <link rel="icon" type="image/png" href="~/assets/img/favicon2.png" />

    <!-- Bootstrap & Icons -->
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">

    <!-- Template CSS -->
    <link href="~/assets/css/main.css" rel="stylesheet">

    <style>
        .branding {
            min-height: 70px;
        }

        .navmenu ul {
            display: flex;
            gap: 12px;
            list-style: none;
            margin: 0;
            padding: 0;
            align-items: center;
        }

        .navmenu a {
            padding: 8px 12px;
            font-weight: 500;
            color: #333;
            text-decoration: none;
        }

            .navmenu a:hover {
                color: #0d6efd;
            }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <header id="header" class="header sticky-top bg-white shadow-sm">

        <!-- Topbar -->
        <div class="bg-light py-2 small">
            <div class="container-xl d-flex justify-content-between">
                <span>contact@example.com</span>
                <span>+1 5589 55488 55</span>
            </div>
        </div>

        <!-- Main Navbar -->
        <div class="branding">
            <div class="container-xl d-flex align-items-center justify-content-between">

                <!-- Logo -->
                <a href="/" class="text-decoration-none">
                    <h1 class="h4 m-0 text-primary fw-bold">Clinic</h1>
                </a>

                <!-- Main Menu -->
                <nav class="navmenu d-none d-xl-block">
                    <ul>
                        <li><a href="/">Home</a></li>
                        <li><a href="/Home/About">About</a></li>
                        <li><a href="/Home/Services">Services</a></li>
                        <li><a href="/Home/Departments">Departments</a></li>
                        <li><a href="/Home/Doctors">Doctors</a></li>
                        <li><a href="/Home/Contact">Contact</a></li>
                    </ul>
                </nav>

                <!-- User Menu -->
                <div class="d-flex align-items-center gap-2">
                    <partial name="_UserNav" />
                    <i class="mobile-nav-toggle d-xl-none bi bi-list fs-3"></i>
                </div>

            </div>
        </div>

    </header>

    <main class="flex-grow-1">
        <div class="container mt-3">
            <partial name="_Alerts" />
        </div>

        @RenderBody()
    </main>

    <footer class="bg-light border-top py-3 mt-auto">
        <div class="container text-center text-muted">
            © DEPI Student Banha - All Rights Reserved
        </div>
    </footer>

    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/assets/js/main.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>