@model List<Project.MVC.Models.PatientAppointmentViewModel>
@{
    ViewData["Title"] = "My Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="mb-2">
                <i class="bi bi-calendar3 text-primary me-2"></i>My Appointments
            </h2>
            <p class="text-muted">Manage your upcoming and past appointments</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="Appointment" asp-action="Book" class="btn btn-primary">
                <i class="bi bi-plus-circle me-2"></i>Book New Appointment
            </a>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Filter Tabs -->
    <ul class="nav nav-pills mb-4" id="appointmentFilter" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="all-tab" data-bs-toggle="pill" data-bs-target="#all" 
                    type="button" role="tab">
                <i class="bi bi-calendar-check me-2"></i>All
                <span class="badge bg-secondary ms-1">@(Model?.Count ?? 0)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="upcoming-tab" data-bs-toggle="pill" data-bs-target="#upcoming" 
                    type="button" role="tab">
                <i class="bi bi-clock-history me-2"></i>Upcoming
                <span class="badge bg-success ms-1">@(Model?.Count(a => a.IsUpcoming) ?? 0)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="past-tab" data-bs-toggle="pill" data-bs-target="#past" 
                    type="button" role="tab">
                <i class="bi bi-archive me-2"></i>Past
                <span class="badge bg-info ms-1">@(Model?.Count(a => a.IsPast) ?? 0)</span>
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="cancelled-tab" data-bs-toggle="pill" data-bs-target="#cancelled" 
                    type="button" role="tab">
                <i class="bi bi-x-circle me-2"></i>Cancelled
                <span class="badge bg-danger ms-1">@(Model?.Count(a => a.Status?.ToLower() == "cancelled") ?? 0)</span>
            </button>
        </li>
    </ul>

    <!-- Tab Content -->
    <div class="tab-content" id="appointmentFilterContent">
        
        <!-- All Appointments -->
        <div class="tab-pane fade show active" id="all" role="tabpanel">
            @if (Model != null && Model.Any())
            {
                <div class="row g-4">
                    @foreach (var appointment in Model.OrderByDescending(a => a.StartAt))
                    {
                        <div class="col-md-6 col-lg-4">
                            @await Html.PartialAsync("_AppointmentCard", appointment)
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-x display-1 text-muted"></i>
                    <h4 class="mt-3">No Appointments</h4>
                    <p class="text-muted">You haven't booked any appointments yet.</p>
                    <a asp-controller="Appointment" asp-action="Book" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle me-2"></i>Book Your First Appointment
                    </a>
                </div>
            }
        </div>

        <!-- Upcoming Appointments -->
        <div class="tab-pane fade" id="upcoming" role="tabpanel">
            @{
                var upcomingAppointments = Model?.Where(a => a.IsUpcoming && a.Status?.ToLower() != "cancelled").OrderBy(a => a.StartAt).ToList();
            }
            @if (upcomingAppointments != null && upcomingAppointments.Any())
            {
                <div class="row g-4">
                    @foreach (var appointment in upcomingAppointments)
                    {
                        <div class="col-md-6 col-lg-4">
                            @await Html.PartialAsync("_AppointmentCard", appointment)
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-calendar-event display-1 text-muted"></i>
                    <h4 class="mt-3">No Upcoming Appointments</h4>
                    <p class="text-muted">You don't have any upcoming appointments scheduled.</p>
                    <a asp-controller="Appointment" asp-action="Book" class="btn btn-primary mt-3">
                        <i class="bi bi-plus-circle me-2"></i>Book an Appointment
                    </a>
                </div>
            }
        </div>

        <!-- Past Appointments -->
        <div class="tab-pane fade" id="past" role="tabpanel">
            @{
                var pastAppointments = Model?.Where(a => a.IsPast && a.Status?.ToLower() != "cancelled").OrderByDescending(a => a.StartAt).ToList();
            }
            @if (pastAppointments != null && pastAppointments.Any())
            {
                <div class="row g-4">
                    @foreach (var appointment in pastAppointments)
                    {
                        <div class="col-md-6 col-lg-4">
                            @await Html.PartialAsync("_AppointmentCard", appointment)
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-archive display-1 text-muted"></i>
                    <h4 class="mt-3">No Past Appointments</h4>
                    <p class="text-muted">You don't have any past appointments.</p>
                </div>
            }
        </div>

        <!-- Cancelled Appointments -->
        <div class="tab-pane fade" id="cancelled" role="tabpanel">
            @{
                var cancelledAppointments = Model?.Where(a => a.Status?.ToLower() == "cancelled").OrderByDescending(a => a.StartAt).ToList();
            }
            @if (cancelledAppointments != null && cancelledAppointments.Any())
            {
                <div class="row g-4">
                    @foreach (var appointment in cancelledAppointments)
                    {
                        <div class="col-md-6 col-lg-4">
                            @await Html.PartialAsync("_AppointmentCard", appointment)
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle display-1 text-muted"></i>
                    <h4 class="mt-3">No Cancelled Appointments</h4>
                    <p class="text-muted">You haven't cancelled any appointments.</p>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function cancelAppointment(appointmentId, doctorName) {
            if (confirm(`Are you sure you want to cancel your appointment with ${doctorName}?`)) {
                fetch(`/api/appointments/${appointmentId}/cancel`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        alert('Appointment cancelled successfully.');
                        location.reload();
                    } else { 
                        return response.text().then(text => {
                        let errorMessage = 'Failed to cancel appointment';
                        try {
                            const data = text ? JSON.parse(text) : {};
                            errorMessage = data.message  || appointmentId;
                        } catch (e) {
                            // If parsing fails, use status text
                            errorMessage = response.statusText ;
                        }
                    throw new Error(errorMessage);
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Failed to cancel appointment: ' + error.message);
                });
            }
        }
    </script>
}

<style>
    .nav-pills .nav-link {
        color: #6c757d;
        border-radius: 25px;
        padding: 10px 20px;
        transition: all 0.3s;
    }
    
    .nav-pills .nav-link:hover {
        background-color: #f8f9fa;
    }
    
    .nav-pills .nav-link.active {
        background-color: #3fbbc0;
        color: white;
    }
    
    .nav-pills .nav-link.active .badge {
        background-color: rgba(255, 255, 255, 0.3) !important;
    }
</style>

