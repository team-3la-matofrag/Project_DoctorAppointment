@model List<Project.MVC.Models.PatientAppointmentViewModel>
@{
    ViewData["Title"] = "My Appointments";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h2>My Appointments</h2>
    <table class="table table-striped mt-4">
        <thead>
            <tr>
                <th>Date</th>
                <th>Time</th>
                <th>Doctor</th>
                <th>Status</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@item.StartAt.ToString("d")</td>
                        <td>@item.StartAt.ToString("t")</td>
                        <td>@item.DoctorName</td>
                        <td>
                            <span class="badge @(item.Status == "Confirmed" ? "bg-success" : item.Status == "Pending" ? "bg-warning" : "bg-secondary")">
                                @item.Status
                            </span>
                        </td>
                        <td>
                            <!-- Actions placeholders -->
                            <button class="btn btn-sm btn-outline-danger">Cancel</button>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No appointments found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
